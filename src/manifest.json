{
  "name": "Qin夜活ニュースシェア",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "夜活ニュースシェアのChrome拡張です。",
  "permissions": [
    "activeTab",
    "tabs",
    "background",
    "contextMenus"
  ],
  "icons": {
    "48": "icons/icon_48.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistant": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ]
}